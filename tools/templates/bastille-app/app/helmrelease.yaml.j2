---
# yaml-language-server: $schema=https://raw.githubusercontent.com/fluxcd/source-controller/main/docs/api/v1/source.json
apiVersion: source.toolkit.fluxcd.io/v1
kind: OCIRepository
metadata:
  name: app-template
spec:
  interval: 5m
  layerSelector:
    mediaType: application/vnd.cncf.helm.chart.content.v1.tar+gzip
    operation: copy
  ref:
    tag: 4.2.0
  url: oci://ghcr.io/bjw-s-labs/helm/app-template
  verify:
    provider: cosign
---
# yaml-language-server: $schema=https://raw.githubusercontent.com/bjw-s-labs/helm-charts/main/charts/other/app-template/schemas/helmrelease-helm-v2.schema.json
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: {{ APP_NAME }}
spec:
  interval: 1h
  chartRef:
    kind: OCIRepository
    name: app-template
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3{% if ENABLE_VALUES %}
  valuesFrom:
    - kind: ConfigMap
      name: {{ APP_NAME }}-values{% endif %}
  values:
    controllers:
      main:
        replicas: 1
        strategy: RollingUpdate
        annotations:
          reloader.stakater.com/auto: "true"
        containers:
          app:
            image:
              repository: {{ IMAGE_REPO }}
              tag: {{ IMAGE_TAG }}
            securityContext:
              allowPrivilegeEscalation: false
              readOnlyRootFilesystem: true
              runAsNonRoot: true
              runAsUser: 65534
              runAsGroup: 65534
              capabilities:
                drop: ["ALL"]
            resources:
              requests:
                cpu: 10m
                memory: 128Mi
              limits:
                memory: 512Mi
    service:
      main:
        ports:
          http:
            port: {{ SERVICE_PORT }}{% if ENABLE_ROUTE %}
    route:
      main:
        annotations:
          gethomepage.dev/enabled: "true"
          gethomepage.dev/description: {{ APP_NAME | title }}
          gethomepage.dev/group: Apps
          gethomepage.dev/name: {{ APP_NAME | title }}
          gethomepage.dev/app: {{ APP_NAME }}
        hostnames:
          - {{ HOSTNAME }}
        parentRefs:
          - name: edge
            namespace: network
            sectionName: https{% endif %}
